<p>  All Posts </p>
<table>
	
   	<th> Title </th>
   	<th> Content </th>

    <% @posts.each do |post| %>
       <tr>
    		<td> <%= link_to post.title , post %> </td>
    		<td> <%= post.content %> </td>
    		<td>  <%= link_to "Edit", edit_post_path(post) %> </td>
    		<td>  <%= link_to "Delete", post, :confirm => "Are you sure you want to delete?",:method => :delete %> </td>
      </tr>    	
    <% end %>
    
    
    
    <p> <%= link_to "Add a new post", new_post_path %>  </p>    
    
</table>  
